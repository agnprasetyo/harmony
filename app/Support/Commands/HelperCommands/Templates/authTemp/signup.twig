{% extends 'templates/app.twig' %}

{% block content %}
    
    <div class="form-container">
    <div class="card">
        <h4 class="card-header">Sign Up</h4>
            <div class="card-body">                

                <form method="POST" action="{{ path_for('auth.signup') }}" autocomplete="off">
                    {{ csrf.field | raw }}
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="text" class="form-control {{ errors.email ? 'is-invalid' : '' }}" name="email" id="email" aria-describedby="emailHelp" placeholder="Enter email" value="{{ old.email }}">
                        {% if errors.email %}
                            <small id="emailHelp" class="form-text text-danger">*{{ errors.email | first }}</small>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="name">Fullname</label>
                        <input type="text" class="form-control {{ errors.name ? 'is-invalid' : '' }}" name="name" id="name" aria-describedby="fullnameHelp" placeholder="Enter Fullname" value="{{ old.name }}">
                        {% if errors.name %}
                            <small id="fullnameHelp" class="form-text text-danger">*{{ errors.name | first }}</small>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control {{ errors.password ? 'is-invalid' : '' }}" name="password" id="password" placeholder="Password">
                        {% if errors.password %}
                            <small id="passwordHelp" class="form-text text-danger">*{{ errors.password | first }}</small>
                        {% endif %}
                    </div>
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                </form>
            </div>
        </div>
    </div>

{% endblock %}